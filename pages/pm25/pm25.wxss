/* pages/pm25/pm25.wxss */
.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f5f5f5;
}

.header {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.back {
    font-size: 36rpx;
    color: #333;
    margin-right: 20rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
}

.pm25-display {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
}

.pm25-value {
    font-size: 120rpx;
    font-weight: bold;
    color: #333;
}

.pm25-status {
    font-size: 36rpx;
    margin-top: 20rpx;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
}

.status-good {
    background-color: #67c23a;
    color: #fff;
}

.status-bad {
    background-color: #f56c6c;
    color: #fff;
}

.pm25-advice {
    font-size: 28rpx;
    color: #666;
    padding: 0 20rpx;
    text-align: center;
}

.control-panel {
    display: flex;
    justify-content: center;
    margin-top: 80rpx;
}

.control-button {
    font-size: 32rpx;
    padding: 20rpx 40rpx;
    background-color: #007aff;
    color: #fff;
    border-radius: 10rpx;
}    