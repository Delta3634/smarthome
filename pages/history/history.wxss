/* pages/history/history.wxss */
.container {
  padding: 20rpx;
}

.data-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.type-item {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  background: #f5f7fa;
  color: #666;
  font-size: 28rpx;
}

.type-item.active {
  background: #2d8cf0;
  color: white;
}

.chart-container {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.chart {
  width: 100%;
  height: 600rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: block;
  color: #303133;
}